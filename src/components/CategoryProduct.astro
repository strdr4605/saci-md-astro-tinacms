---
const { product } = Astro.props;
---

<div class="flex w-78 flex-col gap-3 rounded-xl bg-gray-100 p-4">
  <img class="h-72 w-72 object-contain" src={product.frontmatter.imgSrc} />
  <div class="">
    <h3 class="text-xl">
      {product.frontmatter.name}
    </h3>
    <p class="text-gray-500">{product.frontmatter.size}</p>
  </div>
</div>
