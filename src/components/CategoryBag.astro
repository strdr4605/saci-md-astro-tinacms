---
const { bag } = Astro.props;
---

<div class="flex flex-col gap-3 rounded-xl bg-gray-100 p-4">
  <img class="h-72 w-72 object-contain" src={bag.frontmatter.imgSrc} />
  <div class="">
    <h3 class="text-xl">
      {bag.frontmatter.name}
    </h3>
    <p class="text-gray-500">{bag.frontmatter.size}</p>
  </div>
</div>
