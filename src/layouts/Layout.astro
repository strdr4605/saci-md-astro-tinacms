---
import background from '../assets/background.svg';
import './src/styles/global.css'
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/gif" href="/favicon.gif" />
		<meta name="generator" content={Astro.generator} />
		<title>Saci.md</title>
	</head>
	<body>
	<img id="background" class="fixed top-0 left-0 w-full h-full -z-[1]" src={background.src} alt="" fetchpriority="high" />
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}

	#background {
		filter: blur(100px);
	}

</style>
